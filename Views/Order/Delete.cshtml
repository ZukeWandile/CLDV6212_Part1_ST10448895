@model ABC_Retailers.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<h2>Delete Order</h2>
<hr />

<h4>Are you sure you want to delete this order?</h4>

<div class="card p-3 mb-3 shadow-sm">
    <dl class="row">
        <dt class="col-sm-3">Order ID</dt>
        <dd class="col-sm-9">@Model.RowKey</dd>

        <dt class="col-sm-3">Customer</dt>
        <dd class="col-sm-9">@Model.CustomerName</dd>

        <dt class="col-sm-3">Product</dt>
        <dd class="col-sm-9">@Model.ProductName</dd>


        <dt class="col-sm-3">Quantity</dt>
        <dd class="col-sm-9">@Model.Quantity</dd>

        <dt class="col-sm-3">Total Price</dt>
        <dd class="col-sm-9">@Model.TotalPrice.ToString("C")</dd>

        <dt class="col-sm-3">Order Date</dt>
        <dd class="col-sm-9">@Model.OrderDate.ToShortDateString()</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">
            <span class="badge
                @(Model.Status == "Completed" ? "bg-success" :
                  Model.Status == "Pending" ? "bg-warning text-dark" :
                  Model.Status == "Cancelled" ? "bg-danger" : "bg-secondary")">
                @Model.Status
            </span>
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="partitionKey" value="@Model.PartitionKey" />
    <input type="hidden" name="rowKey" value="@Model.RowKey" />

    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
